{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger - Orion Help Desk",
    "description": "API"
  },
  "host": "localhost:3333",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],

  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "produces": ["application/json"],
        "summary": "Create a new user",
        "parameters": [{
            "name": "name",
            "description": "User fullname",
            "in": "body",
            "required": true
          },
          {
            "name": "email",
            "description": "Login Email",
            "in": "body",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          },
          "400": {
            "description": "Validation Failed"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        }
      }
    },
    "NewUser": {
      "type": "object",
      "required": [
        "name",
        "email",
        "password"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "format": "password"
        }
      }
    }
  }
}
